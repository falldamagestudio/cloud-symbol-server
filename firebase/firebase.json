{
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8082
        },
        "hosting": {
            "port": 5000
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "port": 4000
        }
    },
    "hosting": {
        "public": "../frontend/dist",
        "ignore": [
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": {
        "rules": "storage.rules"
    }
}
